# Firebase Client SDK (exposed to frontend via VITE_ prefix)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (server only) - service account credentials
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com

# Pipeline API Key (for external transcription services)
PIPELINE_API_KEY=change-this-to-a-secure-random-key

# yt-dlp cookies file (Netscape format) for YouTube downloads from server IPs.
# YouTube blocks downloads from datacenter/cloud IPs without authentication.
# Export cookies from your browser: https://github.com/yt-dlp/yt-dlp/wiki/FAQ#how-do-i-pass-cookies-to-yt-dlp
# YTDLP_COOKIES_FILE=./server/cookies.txt

# FTP Storage (Explicit FTPS)
FTP_HOST=your-ftp-host.com
FTP_USER=your-ftp-username
FTP_PASS=your-ftp-password
# Base directory on the FTP server where uploads are stored (relative to FTP root)
FTP_BASE_PATH=uploads

# CORS â€” comma-separated origins allowed to call the API
# On Vercel this is your production domain(s), e.g.:
#   https://digiscribe.vercel.app,https://yourdomain.com
FRONTEND_URL=https://digiscribe.vercel.app

# Email notifications (optional)
# SMTP_HOST=smtp.example.com
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-smtp-password
# SMTP_PORT=587
# QUOTE_EMAIL=notifications@example.com
